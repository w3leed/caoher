    private void jButton1ActionPerformed(java.awt.event.ActionEvent evt) {                                         
        try {
            //remove any thing
            ClipherText.setText("");
            //get string massage 

            String plaintxt = plainf.getText();
            //get counter
            int shift = Integer.parseInt(shiftfield.getText());
            ///////////erorr
            Chf(plaintxt);

            //    check
            //////////
            String ClipherTxt = shiftcipher(plaintxt, shift);
            /////////////
            ClipherText.setText(ClipherTxt);
        } catch (NumberFormatException e) {
            //not intger
            JOptionPane.showMessageDialog(null, "ERROR", "please enter an intger value", JOptionPane.ERROR_MESSAGE);
        } catch (Exception e) {
            //special char
            JOptionPane.showMessageDialog(null, "ERROR", "no special char", JOptionPane.ERROR_MESSAGE);
        }
    }                                        

    private void ClipherTextActionPerformed(java.awt.event.ActionEvent evt) {                                            
        // TODO add your handling code here:
    }                                           
    private void Chf(String s) throws Exception {

        for (int i = 0; i < s.length(); i++) {
            if (s.charAt(i) < 32 || s.charAt(i) > 126) {
                throw new Exception();

            }

        }

    }

    private String shiftcipher(String p, int s) {
        char[] parray = p.toCharArray();
        char[] carray = new char[parray.length];
        for (int i = 0; i < parray.length; i++) {
            int asc = (int) parray[i];
            asc = (asc - 32 + s) % 95 + 32;
            carray[i] = (char) asc;
        }
        String c = new String(carray);
        return c;
    }

